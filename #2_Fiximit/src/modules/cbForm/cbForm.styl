/*
* cbForm.styl
*/

input:required:invalid,
input:focus:invalid,
input:invalid
  box-shadow none


.cb-form
  background #fafafa
  box-shadow 0px 0px 16px 11px rgba(0,0,0,0.2)
  border-radius 5px
  width 100%
  max-width 300px
  min-height 180px
  margin 6% auto 0
  padding torem(30px) torem(40px)
  +above('sm')
    max-width 455px
    padding torem(40px) torem(60px)
    border-radius 6px
  +above('lg')
    max-width 570px
    padding torem(50px) torem(70px)
    border-radius 8px

.cb-form
  .input-group
    margin-bottom torem(15px)
    +above('sm')
      margin-bottom torem(25px)
    +above('lg')
      margin-bottom torem(30px)

  .input-group__label
    display flex
    flex-direction column
    position relative
    font-size 14px
    color $main-color
    font-family "RobotoLight"
    +above('sm')
      font-size 18px
    +above('lg')
      font-size 20px

  .input-group__label::before
    content attr(data-label)
    position absolute
    left 2.5rem
    top calc(.5em + 4px)
    background-color $body-bg-color
    color inherit
    font-size 1em
    line-height 1
    text-align left
    padding .1em
    pointer-events none
    transition-property transform
    transition-duration .2s
    transition-delay 0
    transition-timing-function ease-out
    +above('sm')
      top calc(.5em + 2px)

  .input-group__label.is-touched::before,
  .input-group__label.is-changed::before
    transform translate(-1.5em, calc(-1em - 6px)) scale(0.8, 0.8)

  .input-group__label.is-changed:not(.is-empty)::before
    content attr(data-label-alt);

  .input-group__label.is-success:not(.is-empty)
    color $brand-success

  .input-group__label.is-error
    color $brand-danger


  .input-group__icon
    font-size 16px
    position absolute
    top calc(1rem - 4px)
    left 1rem
    width 1em
    height @width
    vertical-align middle
    fill currentColor
    +above('sm')
      font-size 20px
    +above('lg')
      font-size 24px

  .input-group__field
    border 1px solid
    background-color $body-bg-color
    padding .5rem .5rem .5rem 2.5rem
    border-radius 2em
    vertical-align middle
    &:focus, &:active
      outline 0
      box-shadow inset 0 0 .2em rgba($main-color, .5)
